import javax.swing.*;
class UsingJOptionPaneDialogs {
   public static void main(String[] args) {
      String name = "";
      for (int i = 1; i > 0; i++) {
         name = JOptionPane.showInputDialog(null,"Enter your name");
      if (name == null || name.trim().isEmpty()) {
         JOptionPane.showMessageDialog(null,"Invalid input, enter your name again");
         continue;
      }
      int confirm = JOptionPane.showConfirmDialog(null, "Is your name " + name + "?", "Confirm", JOptionPane.YES_NO_OPTION);
      if (confirm == JOptionPane.YES_OPTION) {
         JOptionPane.showMessageDialog(null,"Hello, " + name);
         System.exit(0);
      } else {
         JOptionPane.showMessageDialog(null, "Re enter your name");
         }
      }
   }
}
